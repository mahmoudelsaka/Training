<odoo>
    <data>
        <record id="training_training_form_view" model="ir.ui.view">
            <field name="name">Training Form View</field>
            <field name="model">training.training</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_hod"
                                string="HoD Approve"
                                type="object"
                                states="new"
                                class="btn-primary"/>
                        <button name="action_hrman"
                                string="HR Aprrove"
                                type="object"
                                groups="Employee_Training.training_officer"
                                states="hod"
                                class="btn-primary"/>
                        <button name="action_approve"
                                states="hrman,hod"
                                string="Approved"
                                groups="Employee_Training.training_officer"
                                class="btn-primary"
                                type="object"/>
                        <button name="action_close"
                                states="hrman"
                                string="Closed"
                                groups="Employee_Training.training_officer"
                                class="btn-primary"
                                type="object"/>
                        <button name="action_cancel"
                                states="hrman,new,hod,approve"
                                groups="Employee_Training.training_officer"
                                string="Cancel"
                                class="btn-primary"
                                type="object"/>
                        <field name="state" widget="statusbar"
                               statusbar_visible="new,hod,hrman"/>

                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="employee_id"/>

                                <field name="course_name"/>
                            </group>
                            <group>
                                <field name="price_id"/>
                                <field name="user_id" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Content">
                                <field name="bio_content"/>
                            </page>
                            <page string="Agreement">
                                <field name="bio_agrement"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>


        <record id="training_tree_view" model="ir.ui.view">
            <field name="name">Training Tree View</field>
            <field name="model">training.training</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="course_name"/>
                    <field name="price_id"/>
                </tree>
            </field>
        </record>

